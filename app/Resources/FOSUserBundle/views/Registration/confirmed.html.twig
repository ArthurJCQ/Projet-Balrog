{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block navbar %}
    <nav class="navbar navbar-expand-lg mb-4 top-bar navbar-static-top sps sps--abv bg-dark">
        <div class="container">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarCollapse1" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand mx-auto" href="{{ path('accueil') }}">Accueil</a>
            <div class="collapse navbar-collapse" id="navbarCollapse1">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"> <a class="nav-link" href="{{ path('hero_index') }}">JOUER AU JEU</a> </li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block fos_user_content %}

    <div class="divmt">
        <div class="container">
        <p style="text-align: center; color:green;">{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
            <img src="{{ asset('img/equipement2.png') }}" style="margin-top:-75px;">
        {% if targetUrl %}
        <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
        {% endif %}
        </div>
    </div>
{% endblock fos_user_content %}
