            <!--Card-->
            <div class="card">

                <!--Card image-->
                <div class="view overlay hm-white-slight">
                    <img src="{{ asset('img/news2.png') }}" class="img-fluid" alt="photo">
                    <a href="#!">
                        <div class="mask"></div>
                    </a>
                </div>

                <!--Card content-->
                <div class="card-body text-center">
                    <!--Title-->
                    <h4 class="card-title">Ouverture du donjon de Naheulbeuk</h4>
                    <!--Text-->
                    <p class="card-text">Ceci est un test d'article. Il n'existe pas encore de donjon de Naheulbeuk et même si c'était le cas, vous ne pourriez pas y accéder, mouhaha.</p>
                    <a href="#!" class="btn btn-outline-danger waves-effect">Lire la suite..</a>
                </div>

            </div>
            <!--/.Card-->

        </div>
        <!-- Grid column -->
        </div>
    </div>
    </section>
{% endblock %}

