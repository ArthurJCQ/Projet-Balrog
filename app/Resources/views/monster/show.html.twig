{% extends 'base.html.twig' %}

{% block body %}
    <h1>Monster</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ monster.id }}</td>
            </tr>
            <tr>
                <th>Damages</th>
                <td>{{ monster.damages }}</td>
            </tr>
            <tr>
                <th>Attackname</th>
                <td>{{ monster.attackName }}</td>
            </tr>
            <tr>
                <th>Health</th>
                <td>{{ monster.health }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ monster.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('monster_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
