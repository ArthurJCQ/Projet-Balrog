{% extends 'base.html.twig' %}

{% block body %}
<div class="col-md-4 mt-5">
    <h1>Monster</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ monster.id }}</td>
            </tr>
            <tr>
                <th>Damages</th>
                <td>{{ monster.damages }}</td>
            </tr>
            <tr>
                <th>Attackname</th>
                <td>{{ monster.attackName }}</td>
            </tr>
            <tr>
                <th>Health</th>
                <td>{{ monster.health }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ monster.name }}</td>
            </tr>
        </tbody>
    </table>
            <a class="btn btn-outline-danger btn-block" href="{{ path('monster_index') }}">Back to the list</a>
</div>
{% endblock %}
