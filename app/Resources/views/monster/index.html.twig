{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid padding-top divmt">
        <div class="row">
            <div class="col-lg-5">
            </div>
            <div class="col-lg-4">
                <h1>Monstres</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2">
            </div>
            <div class="col-lg-8">

                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Id</th>
                            <th>Damages</th>
                            <th>Attackname</th>
                            <th>Health</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for monster in monsters %}
                        <tr>
                            <td><a href="{{ path('monster_show', { 'id': monster.id }) }}">{{ monster.id }}</a></td>
                            <td>{{ monster.damages }}</td>
                            <td>{{ monster.attackName }}</td>
                            <td>{{ monster.health }}</td>
                            <td>{{ monster.name }}</td>
                            <td>
                                <ul>
                                    <a class="btn btn-outline-danger btn-block" href="{{ path('monster_show', { 'id': monster.id }) }}">show</a>
                                </ul>
                            </td>
                        </tr>
                        {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    </div>
{% endblock %}
