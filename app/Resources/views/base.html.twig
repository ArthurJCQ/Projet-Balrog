<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Balrog{% endblock %}</title>
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon2.ico') }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.css') }}"/>
            <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}"/>
        {% block style %}{% endblock %}
    </head>
    <body>

    {% block navbar %}
    {% if app.request.get('_route') == 'accueil' %}
        <nav class="navbar navbar-expand-lg mb-4 top-bar navbar-static-top sps sps--abv">
            {% else %}
            <nav class="navbar navbar-expand-lg mb-4 top-bar navbar-static-top sps sps--abv bg-dark">
                {% endif %}
            <div class="container">
                <button class="navbar-toggler navbar-toggler-left" type="button" data-toggle="collapse" data-target="#navbarCollapse1" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span style="color:#da3e44;" class="fas fa-bars"></span>
                </button>
                {% if app.request.get('_route') == 'accueil' %}
                <a class="navbar-brand mx-auto" href="{{ path('accueil') }}">Balrog</a>
                {% else %}
                <a class="navbar-brand mx-auto" href="{{ path('accueil') }}">Accueil</a>
                {% endif %}
                <div class="collapse navbar-collapse" id="navbarCollapse1">
                    <ul class="navbar-nav ml-auto">
                        {% if app.request.get('_route') == 'accueil' %}
                        <li class="nav-item active"> <a class="nav-link" href="{{ path('accueil') }}">Accueil <span class="sr-only">(current)</span></a> </li>
                        <li class="nav-item"> <a class="nav-link" href="#Encyclopedie">Encyclopédie</a> </li>
                        <li class="nav-item"> <a class="nav-link" href="#Univers">Univers</a> </li>
                        <li class="nav-item"> <a class="nav-link" href="#Actualites">Actualités</a> </li>
                        {% endif %}
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{ app.user.username|upper }}
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="{{ path('hero_index') }}">Jouer au jeu !</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                                </div>
                            </li>
                        {% else %}
                        <li class="nav-item"> <a class="nav-link" href="{{ path('fos_user_security_login') }}" >Connexion</a> </li>
                        <li class="nav-item"> <a class="nav-link" href="{{ path('fos_user_registration_register') }}" >Inscription</a> </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    {% endblock %}

    {% block body %}{% endblock %}

    {% block sign %}{% endblock %}

    {% block javascripts %}

        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <script type="text/javascript" src="{{ asset('js/swiper.js') }}" ></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.4.1/js/mdb.min.js"></script>
        {% block script %}{% endblock %}
    {% endblock %}
    </body>
</html>
