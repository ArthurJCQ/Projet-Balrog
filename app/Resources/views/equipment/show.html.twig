{% extends 'base.html.twig' %}

{% block body %}
    <h1>Equipment</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipment.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ equipment.name }}</td>
            </tr>
            <tr>
                <th>Rareness</th>
                <td>{{ equipment.rareness }}</td>
            </tr>
            <tr>
                <th>Strength</th>
                <td>{{ equipment.strength }}</td>
            </tr>
            <tr>
                <th>Agility</th>
                <td>{{ equipment.agility }}</td>
            </tr>
            <tr>
                <th>Intelligence</th>
                <td>{{ equipment.intelligence }}</td>
            </tr>
            <tr>
                <th>Chance</th>
                <td>{{ equipment.chance }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('equipment_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
