{% extends 'base.html.twig' %}

{% block body %}
    <h1>Equipment list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Rareness</th>
                <th>Strength</th>
                <th>Agility</th>
                <th>Intelligence</th>
                <th>Chance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipment in equipment %}
            <tr>
                <td><a href="{{ path('equipment_show', { 'id': equipment.id }) }}">{{ equipment.id }}</a></td>
                <td>{{ equipment.name }}</td>
                <td>{{ equipment.rareness }}</td>
                <td>{{ equipment.strength }}</td>
                <td>{{ equipment.agility }}</td>
                <td>{{ equipment.intelligence }}</td>
                <td>{{ equipment.chance }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('equipment_show', { 'id': equipment.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
